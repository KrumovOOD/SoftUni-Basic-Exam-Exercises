@model  FirstWebAplication.Model.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container" style="width:60%;margin-top:2%">
    @if (Model != null)
    {
        <table class="table table-striped ">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Department</th>
            </tr>

            <tbody>



                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Name</td>
                        <td>@Model.Department</td>
                    </tr>
                

            </tbody>
        </table>
    }
</div>


